root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
ij_java_class_count_to_use_import_on_demand = 99
ij_java_doc_do_not_wrap_if_one_line = true

# Follow Angular indent size: https://github.com/angular/angular/blob/master/.editorconfig
[{*.ts,*.js,*.cjs,*.json,*.json5}]
indent_size = 2
ij_json_keep_blank_lines_in_code = 1

[*.ts]
# Also applies to referenced Angular html templates
ij_typescript_spaces_within_interpolation_expressions = false

[*.json5]
ij_json_keep_trailing_comma = true

[{*.sht,*.htm,*.html,*.shtm,*.shtml,*.ng}]
indent_size = 2
ij_html_space_inside_empty_tag = true

[{*.xjsp,*.tag,*.jsf,*.jsp,*.jspf,*.tagf}]
indent_size = 2

[{*.xml,*.xlf,*.svg}]
indent_size = 2
ij_xml_space_inside_empty_tag = true

# Windows files
[{*.iss,*.ini,*.cmd,*.inf,*.cwl}]
end_of_line = crlf

[{*.css,*.scss}]
indent_size = 2

# Charset according to the Java Language Specification
[*.properties]
charset = latin1


[{*.yml,*.yaml}]
indent_size = 2

[*.sh]
indent_size = 2
